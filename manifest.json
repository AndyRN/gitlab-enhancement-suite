{
  "manifest_version": 2,
  "name": "GitLab Enhancement Suite",
  "version": "1.0.14",
  "description": "A suite of enhancements for GitLab.",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon_inactive.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/content/domain-check.js",
        "scripts/content/absolute-time.js",
        "scripts/content/collapse-all.js",
        "scripts/content/filter-job.js",
        "scripts/content/job-output.js"
      ]
    }
  ],
  "permissions": ["storage"]
}
